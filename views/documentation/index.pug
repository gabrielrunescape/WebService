            div(class="col-sm-2 blog-sidebar")
                .sidebar-module
                    h4.sub-doc-header Introdução
                    ol(class="nav-list")
                        li.nav-item #[a(href="/documentation") Introdução]
                        li.nav-item #[a(href="#ideia") Ideia]
                        li.nav-item #[a(href="#recursos") Recursos]
